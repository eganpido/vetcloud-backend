@{
    ViewData["Title"] = "Dashboard - VETCloud";
}

<div class="container py-4">

    <!-- Welcome Section -->
    <div class="mb-4">
        <h2 class="fw-bold text-primary">Welcome, @User.Identity.Name 👋</h2>
        <p class="text-muted">Here’s a quick overview of your clinic and pet shop.</p>
    </div>

    <!-- Stats Section -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-clipboard-plus display-5 text-primary"></i>
                    <h5 class="card-title mt-3">Patient Records</h5>
                    <p class="card-text text-muted">Manage pets' medical histories and appointments.</p>
                    <a href="/Records" class="btn btn-outline-primary btn-sm">Go to Records</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam display-5 text-success"></i>
                    <h5 class="card-title mt-3">Inventory</h5>
                    <p class="card-text text-muted">Track stock levels, medicines, and supplies.</p>
                    <a href="/Inventory" class="btn btn-outline-success btn-sm">Manage Inventory</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-cash-stack display-5 text-warning"></i>
                    <h5 class="card-title mt-3">Sales</h5>
                    <p class="card-text text-muted">Monitor transactions and generate invoices.</p>
                    <a href="/Sales" class="btn btn-outline-warning btn-sm">View Sales</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Reports Section -->
    <div class="row g-4 mt-1">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up-arrow display-5 text-info"></i>
                    <h5 class="card-title mt-3">Reports</h5>
                    <p class="card-text text-muted">Get insights into performance and growth trends.</p>
                    <a href="/Reports" class="btn btn-outline-info btn-sm">View Reports</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people display-5 text-danger"></i>
                    <h5 class="card-title mt-3">Users</h5>
                    <p class="card-text text-muted">Manage staff accounts and user permissions.</p>
                    <a href="/Users" class="btn btn-outline-danger btn-sm">Manage Users</a>
                </div>
            </div>
        </div>
    </div>
</div>
